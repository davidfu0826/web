<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th><%= t('global.edit') %></th>
      <th><%= Meeting.human_attribute_name(:kind) %></th>
      <th><%= t('global.delete') %></th>
    </tr>
  </thead>
  <tbody>
    <% meetings.each do |meeting| %>
      <tr>
        <td><%= link_to(meeting, edit_meeting_path(meeting)) %></td>
        <td><%= meeting_kind(meeting.kind) %></td>
        <td>
          <%= link_to fa_icon('trash'), meeting, method: :delete, data: { confirm: t(:confirm_delete) } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

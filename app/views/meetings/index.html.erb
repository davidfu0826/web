<% if can?(:manage, Meeting) %>
  <% content_for(:sidebar) do %>
    <div class="row">
      <h3><%= t(:tools) %><%= fa_icon('wrench', class: 'pull-right') %></h3>
      <ul>
        <li><%= link_to(t('.new_meeting'), new_meeting_path) %></li>
      </ul>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1><%= title(t('.title')) %></h1>
</div>

<div class="col-md-12">
  <%= simple_format(description(t('.description'))) %>
  <hr />
  <% @meetings.each do |kind, meetings| %>
    <h3><%= meeting_kind(kind) %></h3>
    <%= render 'meetings_table', meetings: meetings %>
    <hr />
  <% end %>
</div>

<% @image ||= Image.new %>
<%= bootstrap_form_for @image, layout: :horizontal, remote: remote do |img_form| %>
  <%= img_form.file_field :image if @image.new_record? %>

  <%= img_form.text_field :title %>
  <% @tags ||= Tag.all %>
  <%= img_form.collection_select :tag_ids, @tags, :id, :title, { include_blank: true, label: t('shared.tags') }, { class: 'select2', multiple: true } %>

  <%= img_form.submit %>
<% end %>

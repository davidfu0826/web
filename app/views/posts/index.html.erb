<div class="news-feed">
  <div class="media">
    <div class="media-body">
      <div class="media-heading">
        <h1><%= t('.welcome') %></h1>
      </div>
      <div class="lead">
        <p><%= t('.lead') %></p>
      </div>
    </div>
  </div>
  <%= render @posts %>
  <%= link_to t('.archive'), posts_archive_path, class: "archive-link" %>
</div>

<% content_for :sidebar do %>
  <%= render 'sidebar' %>
<% end %>

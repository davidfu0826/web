<% content_for :banner do %>
  <%= render('/application/banner',
             images: @images) %>
<% end %>

<div class="news-feed">
  <div class="media">
    <div class="media-body">
      <div class="media-heading">
        <h1><%= t('.welcome') %></h1>
      </div>
      <% if Settings.front_page_video.present? %>
        <div class="responsive-video">
          <iframe src="<%= Settings.front_page_video %>"
                  frameborder="0"
                  allowfullscreen></iframe>
        </div>
      <% end %>
      <div class="lead">
        <%= simple_format(t('.lead')) %>
      </div>
    </div>
  </div>
  <%= render @posts %>
  <div class="post-links">
    <%= link_to t('.archive'), archive_posts_path %>
    |
    <%= link_to t('.rss'), posts_path(format: :rss) %>
  </div>
  <%= auto_discovery_link_tag(:rss, { action: :index }, { title: "TLTH" }) %>
</div>

<% content_for :sidebar do %>
  <%= render 'sidebar' %>
<% end %>

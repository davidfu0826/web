<div class="panel panel-default">
  <div class="panel-body">
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>
  </div>
  <div class="panel-footer">
    <%= link_to t(:edit), edit_post_path(post) if can? :edit, post %>
    <%= link_to t(:destroy), post_path(post), method: :delete if can? :destroy, post %>
  </div>
</div>

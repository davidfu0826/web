<%= bootstrap_form_for @post, layout: :horizontal do |f| %>
  <%= f.text_field :title_sv %>
  <%= f.text_field :title_en %>

  <%= f.form_group do %>
    <div class="col-sm-3"><div id="post-image-preview">
      <%= image_tag @post.image.url, id: "post-image", class: "img-thumbnail" if @post.image.present? %>
      <%= image_tag "http://placehold.it/160x160", id: "post-image", class: "img-thumbnail" if @post.image.blank? %>
    </div>
    <%= f.hidden_field :image_id %></div>

    <div class="col-sm-3"><%= button_tag t('.select_image'), type: :button, class: "btn btn-default", id: "post-image-button" %></div>
  <% end %>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li class="active"><a href="#sv" role="tab" data-toggle="tab">
      Svenska
      <% if (@exists || false) && (@post.content_sv.blank? || @post.title_sv.blank?) %>
        <span class="glyphicon glyphicon-warning-sign"></span>
      <% end %>
    </a></li>
    <li><a href="#en" role="tab" data-toggle="tab">
      Engelska
      <% if (@exists || false) && (@post.content_en.blank? || @post.title_en.blank?) %>
        <span class="glyphicon glyphicon-warning-sign"></span>
      <% end %>
    </a></li>
  </ul>

  <!-- Tab Panes -->
  <div class="tab-content">
    <div class="tab-pane active" id="sv">
      <%= f.form_group nil, label: { text: t('.content') } do %>
        <%= f.pagedown_input :content_sv %>
      <% end %>
    </div>
    <div class="tab-pane" id="en">
      <%= f.form_group nil, label: { text: t('.content') } do %>
        <%= f.pagedown_input :content_en %>
      <% end %>
    </div>
  </div>

  <%= f.collection_select :tag_ids, @tags, :id, :title, { include_blank: true, label: t('shared.tags') }, { id: 'select2', multiple: true } %>
  <%= f.submit %>
<% end %>

<%= render 'shared/image_select_modal' %>

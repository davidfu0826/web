<%= bootstrap_form_for @event do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :description %>
  <%= f.text_field :start_time, 'data-behaviour' => 'datepicker' %>
  <%= f.text_field :end_time, 'data-behaviour' => 'datepicker' %>
  <%= f.collection_select :tag_ids, @tags, :id, :title, { include_blank: true, label: t('shared.tags') }, { id: 'select2', multiple: true } %>

  <%= f.submit %>
<% end %>

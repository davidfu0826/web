<% presenter.months.each do |month| %>
  <%= render 'events/event_calendar_month', presenter: presenter,
                                            month: month %>
<% end %>

<div class="col-xs-12">
  <!-- Link to previous month -->
  <%= link_to events_path(offset: presenter.offset - 1) do %>
    <%= fa_icon('arrow-left') %>
    <%= t('.previous_month') %>
  <% end %>

  <!-- Link to next month -->
  <%= link_to events_path(offset: presenter.offset + 1), class: "pull-right" do %>
    <%= fa_icon('arrow-right', class: 'pull-right') %>
    <%= t('.next_month') %>
  <% end %>
</div>

<div class="page-header">
  <h1>Events</h1>
</div>

<%= link_to t('.new_event'), new_event_path, class: "btn btn-success" %>
<%= link_to t('.new_event_group'), new_event_group_path, class: "btn btn-success" %>
<%= link_to t('.webcal'), events_path(format: :ics, protocol: 'webcal'), class: "btn btn-default" %>
<br>
<br>

<%= bootstrap_form_tag url: events_path, :method => 'get' do |f| %>
  <p>
    <%= f.collection_select :search, @event_groups, :id, :name, { include_blank: true, label: t('.search') } %>
    <%= f.submit t('.search'), :name => nil %>
    <%= link_to t('.reset'), events_path, class: "btn btn-default" %>
  </p>
<% end %>

<% @events.each do |event| %>
  <%= link_to event.title, event %> <br>
<% end %>

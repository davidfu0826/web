<%= bootstrap_form_for @user do |f| %>
  <%= f.email_field :email, autofocus: true %>
  <%= f.text_field :name %>
  <%= f.text_field :title %>
  <%= f.text_field :phonenumber %>
  <%= f.select :locale, @locales.collect {|l| [ t("locales.#{l.first}"), l.first ] } %>
  <%= f.select :role,   @roles.collect   {|r| [ r.first, r.first ] }, include_blank: true if can? :manage, User %>

  <%= f.submit %>
<% end %>

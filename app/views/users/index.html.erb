<div class="page-header">
  <h1><%= t('.users') %></h1>
</div>

<table class="table">
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Title</th>
    <th>Role</th>
    <th>Tools</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.title %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to t(:edit), edit_user_path(user) if can? :edit, user %>
          <%= link_to t(:destroy), user_path(user), method: :delete, data: {confirm: t(:confirm_delete)} if can? :destroy, user %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<% content_for :sidebar do %>
  <% if can? :create, User %>
    <div class="row">
      <h3><%= t(:tools) %><span class="pull-right sidebar-glyph glyphicon glyphicon-wrench"></span></h3>
      <ul>
        <li><%= link_to t('.new_user'), new_user_path %></li>
      </ul>
    </div>
  <% end %>
<% end %>

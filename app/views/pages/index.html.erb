<div class="page-header">
  <h1><%= t('.page_management') %></h1>
</div>


<div class="col-xs-12"><%= render @nav_items %></div>

<h2><%= t('.hidden_pages') %></h2>

<div class="col-xs-12">
  <div class="col-xs-12">
    <% @orphan_pages.each do |page| %>
      <div class="panel panel-default">
        <div class="panel-body-sm">
          <%= link_to page.title, page %>
          <div class="pull-right">
            <%= link_to edit_page_path(page), class: "btn btn-default btn-xs" do %>
              <span class="glyphicon glyphicon-edit"></span>
            <% end %>
            <%= link_to page, method: :delete, class: "btn btn-danger btn-xs" do %>
              <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% content_for :sidebar do %>
  <div class="row">
    <h3><%= t(:tools) %></h3>
    <ul>
      <li><%= link_to t('pages.new_nav_item'), new_nav_item_path if can? :create, NavItem %></li>
      <li><%= link_to t('pages.new_page'), new_page_path(create_nav: true) if can? :create, Page %></li>
      <li><%= link_to t('pages.new_hidden_page'), new_page_path if can? :create, Page %></li>
    </ul>
  </div>
<% end %>

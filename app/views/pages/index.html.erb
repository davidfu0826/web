<div class="page-header">
  <h1><%= t('.page_manegement') %></h1>
</div>


<div class="col-xs-12"><%= render @nav_items %></div>

<%= link_to t('New Menu'), new_nav_item_path, class: "btn btn-success" %>
<%= link_to t('New Page'), new_page_path(create_nav: true), class: "btn btn-success" %>

<h2><%= t('.hidden_pages') %></h2>

<div class="col-xs-12">
  <div class="col-xs-5">
    <% @orphan_pages.each do |page| %>
      <div class="panel panel-default">
        <div class="panel-body-sm">
          <%= link_to page.title, page %>
          <div class="pull-right">
            <%= link_to edit_page_path(page), class: "btn btn-default btn-xs" do %>
              <span class="glyphicon glyphicon-edit"></span>
            <% end %>
            <%= link_to page, method: :delete, class: "btn btn-danger btn-xs" do %>
              <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <%= link_to "New Page", new_page_path, class: "btn btn-success" if can? :create, Page %>
  </div>
</div>

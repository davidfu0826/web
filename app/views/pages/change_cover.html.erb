<div class="page-header">
  <h1><%= t('.heading') %></h1>
</div>

<%= bootstrap_form_for @page, layout: :horizontal do |f| %>

  <% if @cover_image.present? %>
    <%= image_tag @cover_image.url, id: "preview-image", class: "preview-image img-thumbnail" %>
  <% else %>
    <%= image_tag "cover.jpg", id: "preview-image", class: "preview-image img-thumbnail"%>
  <% end %>

  <%= f.hidden_field :image_id %>

  <%= button_tag t('.select_image'), type: :button, class: "btn btn-default", id: "image-button" %>
  <%= link_to t('.delete_cover'), delete_cover_page_path(@page), method: :delete,
    class: "btn btn-danger", data: {confirm: t(:confirm_delete)} if @cover_image.present? %>
  <%= f.submit t('.save_cover') %>
<% end %>

<%= render 'shared/image_select_modal' %>

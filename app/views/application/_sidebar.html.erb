<% if current_user %>
  <div class="row">
    <h3><%= t(:tools) %><%= fa_icon('wrench', class: 'pull-right') %></h3>
      <ul>
        <li><%= link_to t('.new_post'), new_post_path          if can? :create, Post   %></li>
        <li><%= link_to t('.manage_pages'), pages_path         if can? :manage, Page   %></li>
        <li><%= link_to t('.manage_events'), events_path       if can? :manage, Event  %></li>
        <li><%= link_to t('.manage_images'), images_path       if can? :manage, Image  %></li>
        <li><%= link_to t('.manage_documents'), documents_path if can? :manage, Document %></li>
        <li><%= link_to t('.manage_uploads'), uploads_path     if can? :manage, Upload %></li>
        <li><%= link_to t('.manage_meetings'), meetings_path   if can? :manage, Meeting %></li>
        <li><%= link_to t('.manage_tags'), tags_path           if can? :manage, Tag    %></li>
        <li><%= link_to t('.manage_users'), users_path         if can? :manage, User   %></li>
        <li><%= link_to t('.site_settings'), 'settings'        if can? :manage, Page   %></li>
        <li><%= link_to t('.account_settings'), edit_user_path(current_user)       %></li>
      </ul>
  </div>
<% end %>

<div class="row">
  <div class="sidebar-links">
    <h3><%= t('.follow_us') %></h3>
    <a href="https://www.twitter.com/teknologkaren">
      <span class="fa-stack fa-2x">
        <i class="fa fa-square fa-stack-2x twitter-color"></i>
        <i class="fa fa-twitter fa-stack-1x fa-inverse"></i>
      </span>
    </a>
    <a href="https://www.facebook.com/TeknologkarenLTH">
      <span class="fa-stack fa-2x">
        <i class="fa fa-square fa-stack-2x facebook-color"></i>
        <i class="fa fa-facebook fa-stack-1x fa-inverse"></i>
      </span>
    </a>
    <a href="https://www.instagram.com/teknologkaren">
      <span class="fa-stack fa-2x">
        <i class="fa fa-square fa-stack-2x instagram-color"></i>
        <i class="fa fa-instagram fa-stack-1x fa-inverse"></i>
      </span>
    </a>
    <a href="http://www.linkedin.com/company/teknologk-ren-vid-lunds-tekniska-h-gskola-tlth-?">
      <span class="fa-stack fa-2x">
        <i class="fa fa-square fa-stack-2x linkedin-color"></i>
        <i class="fa fa-linkedin fa-stack-1x fa-inverse"></i>
      </span>
    </a>
  </div>
  <h3>
    <%= link_to t(:calendar), events_path %>
    <%= fa_icon('calendar', class: 'pull-right') %>
  </h3>
  <ul class="calendar-feed">
      <%= render partial: 'events/event', collection: @events %>
  </ul>
  <%= link_to t('.all_events'), events_path, class: "link" %>
</div>

<div class="row hidden-sm hidden-xs">
  <h3>
    <%= link_to "Twitter", "https://twitter.com/Teknologkaren" %>
    <%= fa_icon('twitter', class: 'pull-right twitter-color') %>
  </h3>
  <ul id="twitter-feed">
    <%= Rails.cache.read(["views", "v1", "tweets_index"]).try(:html_safe) %>
  </ul>
  <%= link_to t('.twitter_link'), "https://twitter.com/Teknologkaren", class: "link" %>
</div>

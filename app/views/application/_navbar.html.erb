<% @nav_row = NavItem.orphans %>
<%= navbar fixed: :top do %>
  <%= navbar_header brand: 'TLTH' %>
  <%= navbar_collapse do %>
    <%= navbar_group do %>
      <% @nav_row.each do |nav_item| %>
        <% if nav_item.children.count > 0 %>
          <%= navbar_dropdown nav_item.title do %>
            <% nav_item.children.each do |child| %>
              <% if child.has_page? %>
                <%= navbar_item child.title, url_for(child.page) %>
              <% else %>
                <li><a href="#"><%= child.title %></a></li>
              <% end %>
            <% end %>
          <% end %>
        <% else %>
          <% if nav_item.has_page? %>
            <%= navbar_item nav_item.title, url_for(nav_item.page) %>
          <% else %>
            <li><a href="#"><%= nav_item.title %></a></li>
          <% end %>
        <% end %>
      <% end %>
      <li><%= navbar_item t(:events), events_path %></li>
    <% end %>
    <%= navbar_group align: 'right' do %>
      <%= navbar_dropdown "Settings" do %>
        <li><%= navbar_item "New Page", new_page_path %></li>
        <li><%= navbar_item "Nav Index", nav_items_path %></li>
      <% end %>
      <% if current_user %>
        <%= navbar_text current_user.email %>
        <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
      <% else %>
        <%= navbar_item "Log In", new_user_session_path %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

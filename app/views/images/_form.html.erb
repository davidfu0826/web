<%= bootstrap_form_for @image, layout: :horizontal, remote: remote do |f| %>
  <%= f.text_field :title %>
  <%= f.file_field :file if @image.new_record? %>
  <%= f.select :tag_ids, @tags.collect { |t| [t.to_s, t.id] },
                         { label: t('helpers.tags'), include_blank: false },
                         { multiple: true, class: 'select2' } %>
  <%= f.submit %>
<% end %>

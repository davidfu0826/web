$('#insertImageModal').trigger({
  type: 'image_uploaded',
  image_source: '<%= escape_javascript(@image.url) %>',
  image_id: '<%= escape_javascript(@image.id.to_s) %>'
});
$('#image-upload-form').html("<%= escape_javascript(render('modal_form', remote: true)) %>");
$("[type='file']").fileinput({ showUpload: false, showRemove: false, allowedFileExtensions: ['jpeg', 'jpg', 'png', 'bmp', 'gif']});

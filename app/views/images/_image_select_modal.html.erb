<div class="modal fade" id="insertImageModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"></button>
        <!-- Nav tabs -->
        <ul class="nav nav-pills" id="image-modal-tabs">
          <li class="active">
            <a href="#image-select-tab" data-toggle="tab">
              <%= t('.image_gallery') %>
            </a>
          </li>

          <li>
            <a href="#image-upload-tab" data-toggle="tab">
              <%= t('.image_uploader') %>
            </a>
          </li>
        </ul>
      </div><!-- modal-header -->

      <!-- Tab panes -->
      <div class="tab-content">
        <!-- Select Tab -->
        <div class="tab-pane active" id="image-select-tab">
          <div class="modal-body" id="image-select-body">
            <%= render partial: 'images/image_small', collection: @images , as: :image %>
          </div>

          <div class="modal-footer">

            <form id="image-attributes" class="form-inline pull-left">
              <div class="form-group">
                <input type="text" class="form-control" id="image-link" placeholder="<%= t('.link_to') %>">
              </div>
              <div class="form-group">
                <input type="text" class="form-control" id="image-caption" placeholder="<%= t('.caption') %>">
              </div>
            </form>


            <div class="pull-left">
              <!-- Image search footer -->
              <%= bootstrap_form_tag url: search_images_path, method: 'get', layout: :inline, remote: true do |sf| %>
                  <%= sf.collection_select :tag, @tags, :id, :title,
                    { include_blank: true, hide_label: true },
                    { class: "large-select select2"} %>
                  <%= sf.text_field :search, hide_label: true %>

                  <%= sf.submit t(:search), icon: 'search' do %>
                    <i class="glyphicon glyphicon-search"></i>
                  <% end %>
              <% end %>
            </div>
            <div class="pull-right">
              <button id="insert-image" type="button" class="btn btn-primary pull-right">
                <%= t('.select') %>
              </button>
            </div>
          </div>
        </div>

        <!-- Upload tab -->
        <div class="tab-pane" id="image-upload-tab">
          <div class="modal-body">
            <div id="image-upload-form">
              <%= render 'images/modal_form' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

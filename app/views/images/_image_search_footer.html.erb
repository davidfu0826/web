<%= bootstrap_form_tag url: search_images_path, method: 'get', layout: :inline, remote: true do |f| %>
    <%= f.collection_select :tag, @tags, :id, :title,
      { include_blank: true, hide_label: true },
      { class: "large-select select2"} %>
    <%= f.text_field :search, hide_label: true %>

    <%= f.submit 'Search', icon: 'search' do %>
      <i class="glyphicon glyphicon-search"></i>
    <% end %>
<% end %>

<% content_for(:banner) do %>
  <%= render('/application/banner',
             url: asset_url('kårhuset.jpg', host: PUBLIC_URL)) %>
<% end %>
<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1><%= title(t('.title')) %></h1>
    </div>
    <%= simple_format(description(t('.first_paragraph'))) %>
    <%= simple_format(t('.second_paragraph')) %>
    <p>
      <%= t('.contact') %> <%= link_to('styrelsen@tlth.se', 'mailto:styrelsen@tlth.se') %>
    </p>

    <p>
      <%= t('.send_meeting_documents') %> <%= link_to('s-handling@tlth.se', 'mailto:s-handling@tlth.se') %>
    </p>

    <%= image_tag('board.jpg', class: 'img-responsive') %>
    <br />
  </div>

  <div class="col-md-12">
    <h2><%= t('.members') %></h2>
    <table class="board member-table">
      <tbody>
        <tr>
          <td><strong>Tim Djärf</strong><br /><%= t('.chairman') %></td>
          <td><strong>Patrik Gustafsson</strong><br /><%= t('.president') %></td>
        </tr>
        <tr>
          <td><strong>My Reimer</strong><br /><%= t('.board_member') %></td>
          <td><strong>Agnes Sörliden</strong><br /><%= t('.board_member') %></td>
        </tr>
        <tr>
          <td><strong>Joost Kranenborg</strong><br /><%= t('.board_member') %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col-md-12">
    <h2><%= t('.meeting_documents') %></h2>
    <%= render('meeting_documents/meeting_table', meetings: @meetings) %>
  </div>
</div>

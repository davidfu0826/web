    <div class="page-header">
      <h1><%= title(t('.title')) %></h1>
    </div>
    <%= simple_format(description(t('.first_paragraph'))) %>
    <%= simple_format(t('.second_paragraph')) %>
    <p>
      <%= t('.contact') %> <%= link_to('styrelsen@tlth.se', 'mailto:styrelsen@tlth.se') %>
    </p>

    <p>
      <%= t('.send_meeting_documents') %> <%= link_to('s-handling@tlth.se', 'mailto:s-handling@tlth.se') %>
    </p>

    <%= image_tag('board.jpg', class: 'img-responsive') %>
    <br />
  </div>

  <div class="col-md-12">
    <h2><%= t('.members') %></h2>
    <table class="board member-table">
      <tbody>
        <tr>
          <td><strong>Karin Dammer</strong><br />Styrelseordförande</td>
          <td><strong>Linus Hammarlund</strong><br />Kårordförande </td>
        </tr>
        <tr>
          <td><strong>David Wessman</strong><br />Styrelseledamot</td>
          <td><strong>Emil Thorselius</strong><br />Styrelseledamot</td>
        </tr>
        <tr>
          <td><strong>Jacob Karlsson</strong><br />Styrelseledamot</td>
          <td><strong>Oskar Jönsson</strong><br />Styrelseledamot</td>
        </tr>
        <tr>
          <td><strong>Erik Alstersjö</strong><br />Styrelseledamot</td>
          <td><strong>Desirée Ohlsson</strong><br />Styrelseledamot</td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="col-md-12">
    <h2><%= t('.meeting_documents') %></h2>
    <%= render('meeting_documents/meeting_table', meetings: @meetings) %>
  </div>
</div>
